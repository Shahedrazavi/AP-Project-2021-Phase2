<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.component.tweetComponent.ui.TweetComponentFXMLController">
   <children>
      <ImageView fx:id="profilePhoto" fitHeight="50.0" fitWidth="50.0" layoutX="50.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true" />
      <ImageView fx:id="tweetPhoto" fitHeight="100.0" fitWidth="100.0" layoutX="350.0" layoutY="25.0" pickOnBounds="true" preserveRatio="true" />
      <Label fx:id="ProfileNameLabel" layoutX="130.0" layoutY="50.0" text="ProfileName" />
      <Label fx:id="usernameLabel" layoutX="130.0" layoutY="83.0" text="\@Username" />
      <Label fx:id="tweetTextLabel" layoutX="50.0" layoutY="130.0" prefHeight="50.0" prefWidth="705.0" text="Label" />
      <Label fx:id="replyingToLabel" layoutX="50.0" layoutY="113.0" text="Replying To @username">
         <font>
            <Font size="10.0" />
         </font>
      </Label>
      <Label fx:id="retweetedLabel" layoutX="50.0" layoutY="25.0" text="\@username Retweeted" />
      <Button fx:id="muteButton" layoutX="703.0" layoutY="46.0" mnemonicParsing="false" onAction="#mutePressed" text="Mute" />
      <Button fx:id="blockButton" layoutX="703.0" layoutY="79.0" mnemonicParsing="false" onAction="#blockPressed" text="Block" />
      <Button fx:id="viewProfileButton" layoutX="686.0" layoutY="12.0" mnemonicParsing="false" onAction="#viewProfilePressed" text="View Profile" />
      <Button fx:id="likeButton" layoutX="49.0" layoutY="203.0" mnemonicParsing="false" onAction="#likePressed" text="Like" />
      <Button fx:id="commentButton" layoutX="196.0" layoutY="203.0" mnemonicParsing="false" onAction="#commentPressed" text="Comment" />
      <Button fx:id="retweetButton" layoutX="400.0" layoutY="203.0" mnemonicParsing="false" onAction="#retweetPressed" text="Retweet" />
      <Button fx:id="viewCommentsButton" layoutX="195.0" layoutY="243.0" mnemonicParsing="false" onAction="#viewCommentsPressed" text="View Comments" />
      <Button fx:id="saveButton" layoutX="600.0" layoutY="203.0" mnemonicParsing="false" onAction="#savePressed" text="Save" />
      <Button fx:id="forwardButton" layoutX="600.0" layoutY="243.0" mnemonicParsing="false" onAction="#forwardPressed" text="Forward To" />
      <Button fx:id="reportButton" layoutX="49.0" layoutY="243.0" mnemonicParsing="false" onAction="#reportPressed" text="Report" />
   </children>
</AnchorPane>
